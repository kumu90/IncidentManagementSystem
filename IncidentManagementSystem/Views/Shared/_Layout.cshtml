<body style="height:100%">
    <div class="container-fluid" style="height:100%;display:flex;padding:0px;overflow:hidden">
        <div style="height:100%;width:300px">
            <nav class="sidebar">
                <a href="#" class="logo">
                    <img src="~/Image/Logo.png" alt="logo" />
                </a>

                <div class="menu-content">
                    <ul class="menu-items">
                        <div class="menu-title">Incident Management System</div>

                        <li class="item">
                            @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "nav-link" })
                        </li>

                        <li class="item">
                            <div class="submenu-item">
                                <span>Register</span>
                                <i class="fa-solid fa-chevron-right"></i>
                            </div>

                            <ul class="menu-items submenu">
                                <div class="menu-title">
                                    <i class="fa-solid fa-chevron-left"></i>
                                    Register
                                </div>
                                <li class="item">
                                    @Html.ActionLink("User Register", "Register", "Account", new { area = "" }, new { @class = "nav-link" })
                                </li>
                                <li class="item">
                                    @Html.ActionLink("Institution Register", "InstitutionRegister", "Institution", new { area = "" }, new { @class = "nav-link" })
                                </li>

                            </ul>
                        </li>

                    </ul>
                </div>
            </nav>
        </div>
        <div>
            <div style="height:50px;width:100%">
                <nav class="navbar">
                    <i class="fa-solid fa-bars" id="sidebar-close"></i>
                </nav>
            </div>
            <div style="overflow:auto;width:100%; height:100%;padding:10px">

                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        </div>
    </div>
