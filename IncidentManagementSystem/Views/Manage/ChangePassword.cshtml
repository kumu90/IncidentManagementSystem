@model IncidentManagementSystem.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}


<div class="container-fluid reg">

    <div class="row ">
        <div class="col-md-6 text">
            <span class="page input-icon">Profile</span>
            <span class="detail">Change Password</span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12" style="padding:8px; border-radius:8px; background:white;">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group row mb-3 mt-2">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 col-form-label l-user" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control u-box" })
                    </div>
                </div>
                <div class="form-group row mb-3 mt-2">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 col-form-label l-user" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control u-box" })
                    </div>
                </div>
                <div class="form-group row mb-3 mt-2">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label l-user" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control u-box" })
                    </div>
                </div>


                <div class="row">
                    <div class="offset-md-2 col-md-10">
                        <input type="submit" value="Change password" class="btn btn-outline-dark" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}