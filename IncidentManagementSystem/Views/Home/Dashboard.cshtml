@model IncidentManagementSystem.Model.AdminDashboardDto

<h1>dashoard</h1>
<style>
    .col-6 {
        padding-right: 7.5px;
        padding-left: 7.5px;
        /*height: 200px;

        display: block;
        margin-bottom: 20px;
        position: relative;*/
        /* margin-top: 10px;
        margin-right: 20px;
