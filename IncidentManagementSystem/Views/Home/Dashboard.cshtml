        /**/
        /* padding-right: 7.5px;
        padding-left: 7.5px;
        border-radius: .25rem;
        box-sizing: border-box;
        flex: 0 0 50%;
        max-width: 50%;
        width: 100%*/
    }

    .small-box {
        border-radius: .25rem;
        box-shadow: 0 0 1px rgba(0, 0, 0, .125), 0 1px 3px rgba(0, 0, 0, .2);
        display: block;
        margin-bottom: 20px;
        position: relative;
        box-sizing: border-box;
    }

        .small-box .inner {
            padding: 10px;
        }

        .small-box .icon {
            color: rgba(0, 0, 0, .15);
            font-size: 70px;
            position: absolute;
            right: 15px;
            top: -10px;
            transition: -webkit-transform .3s linear;
            transition: transform .3s linear;
            transition: transform .3s linear, -webkit-transform .3s linear;
        }

        .small-box .small-box-fotter {
            background-color: rgba(0, 0, 0, .1);
            color: rgba(255, 255, 255, .8);
            display: block;
            padding: 3px 0;
            position: relative;
            text-align: center;
            text-decoration: none;
            z-index: 10;
        }

    .bg-info {
        color: #fff !important;
    }

    .Font {
        font-size: 24px;
        font-family: outfit-black;
        font-weight: 400;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-6 col-md-2">
            <div class="small-box bg-info">
                <div class="inner">
                    <span class="Font">User</span>
                    <h3>@Model.TotalUsers</h3>
                </div>
                <div class="icon">
                    <i class='bx bxs-user'></i>
                </div>
                <a href="#" class="small-box-fotter">
                    more info
                    <i class='bx bxs-right-arrow-circle'></i>
                </a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-2">
            <div class="small-box bg-info">
                <div class="inner">
                    <span class="Font">Institution</span>

                    <h3>@Model.TotalInstitution</h3>
                </div>
                <div class="icon">
                    <i class='bx bxs-bank'></i>
                </div>
                <a href="#" class="small-box-fotter">
                    more info
                    <i class='bx bxs-right-arrow-circle'></i>
                </a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-2">
            <div class="small-box bg-info">
                <div class="inner">
                    <span class="Font">Ticket</span>

                    <h3>@Model.TotalTicket</h3>
                </div>
                <div class="icon">
                    <i class='bx bxs-credit-card'></i>
                </div>
                <a href="#" class="small-box-fotter">
                    more info
                    <i class='bx bxs-right-arrow-circle'></i>
                </a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-2">
            <div class="small-box bg-info">
                <div class="inner">
                    <span class="Font">Ticket Panding</span>

                    <p>Info</p>
                </div>
                <div class="icon">
                    <i class='bx bxs-timer'></i>
                </div>
                <a href="#" class="small-box-fotter">
                    more info
                    <i class='bx bxs-right-arrow-circle'></i>
                </a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-2">
            <div class="small-box bg-info">
                <div class="inner">
                    <span class="Font">Ticket Resolved</span>

                    <p>Info</p>
                </div>
                <div class="icon">
                    <i class='bx bxs-check-circle'></i>
                </div>
                <a href="#" class="small-box-fotter">
                    more info
                    <i class='bx bxs-right-arrow-circle'></i>
                </a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-2">
            <div class="small-box bg-danger">
                <div class="inner">
                    <span class="Font">Ticket Reject</span>

                    <p>Info</p>
                </div>
                <div class="icon">
                    <i class='bx bxs-x-circle'></i>
                </div>
                <a href="#" class="small-box-fotter">
                    more info
                    <i class='bx bxs-right-arrow-circle'></i>
                </a>
            </div>
        </div>
    </div>
</div>