@using IncidentManagementSystem.Model
@model SearchByDateDto
@*@{
        ViewBag.Title = "Dashboard";
    }

    <h2>Dashboard</h2>*@
<div class="container-fluid dashboard">
    <div class="col-lg-12 header ">
        <div class="header-text">
            Text
        </div>
        <div class="col text">
            <span class="page input-icon">Text</span>

            <span class="detail">Text </span>
        </div>
    </div>

    @using (Html.BeginForm("InfoSearch", "Home", FormMethod.Get, new { id = "searchForm", enctype = "multipart/form-data" }))
    {
        <div class="container-fluid search-box">
            <div class=" row s-box">


                <div class="col-lg-4 form-group s-dash">
                    @Html.TextBoxFor(model => model.SearchFor, new { @class = "form-control", placeholder = "Search" })
                </div>

                <div class="col-lg-4 s-dash">
                    <input type="submit" value="Search" class="btn btn-primary btn-width" />
                </div>

                <div class="col-lg-4 s-dash">
                    <input type="button" value="Create" class="btn btn-success btn-width" onclick="location.href='@Url.Action("Register", "Account")'" id="createUser" />
                </div>
            </div>

        </div>

        <hr />
        <div id="partialDashboardContainer">
            <h3>No Data </h3>
            @{
                Html.Action("InfoSearch");
            }
        </div>
    }
</div>

@section scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#searchForm').submit(function (event) {
                event.preventDefault();
                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (result) {
                        $('#partialDashboardContainer').html(result);
                    },
                    error: function (xhr, status, error) {
                        alert('Error: ' + error);
                    }
                });
            });

            //$('#createUser').onClick(function () {

            //});
        });
    </script>
}

