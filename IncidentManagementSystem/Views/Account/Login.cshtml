@using IncidentManagementSystem.Models
@model LoginViewModel


@{
    Layout = "~/Views/Shared/_Login_layout.cshtml";
}
<style>
    .form-control {
        display: inline-block !important;
    }
   
</style>

<div class="container-fluid main-container">
    <div class="row">

        <div class="col-md-7" style="margin-top:-5px; margin-left:-15px;">

            <img src="~/Image/login image.png" class="log-img " />
        </div>

        <div class="col-md-5 log-form">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                <div class="logo">
                    <img src="~/image/Logo.png" alt="logo" style="margin-left: -15px;" />
                </div>
                @Html.AntiForgeryToken()
                <div class="form-header">
                    <div class="header">
                        <span class="text-header">PROCEED TO LOGIN</span>
                    </div>
                    <div class="subheader">
                        <span class="text-subheader">Login to proceed to Incident Management System</span>
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger " })
                <div class="form-group row mb-3" style="margin-bottom:24px">
                    <div class="col">
                        @Html.LabelFor(m => m.Username, new { @class = "col-md-12 col-form-label l-login" })
                        <div class="col-lg-12 position-relative">
                            <i class="fas fa-user  position-absolute top-50 start-0 translate-middle-y ms-2"></i>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control b-login ps-5" })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group row mb-3" style="margin-bottom:24px">
                    <div class="col">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label l-login" })
                        <div class="col-md-12 position-relative">
                            <i class="  fas fa-lock position-absolute top-50 start-0 translate-middle-y ms-2"></i>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control b-login ps-5" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="col-md-12">
                        <input type="submit" value="Log in" class="btn btn-success l-btn" />
                    </div>
                </div>

            }
        </div>


    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}