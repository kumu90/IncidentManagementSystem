@using IncidentManagementSystem.Models
@model LoginViewModel


@{
    Layout = "~/Views/Shared/_Login_layout.cshtml";
}


<div class="container-fluid   main-container">
    <div class="row l">
        <div class="col-md-6 container-left" @*style="background-color:aqua*@>
            @*<div class="justify-content-center container-left-style">*@
            
            <div class="log-form">
                <div class="logo">
                    <img src="~/image/Logo.png" alt="logo" />
                </div>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-header">
                        <div class="header">
                            <span class="text-header">PROCEED TO LOGIN</span>
                        </div>
                        <div class="subheader">
                            <span class="text-subheader">Login to proceed to Incident Management System</span>
                        </div>
                    </div>

                                <div class="col log">
                                    <div class="uname">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger " })
                                        <div class="col">
                                            @Html.LabelFor(m => m.Username, new { @class = "col-md-2 col-form-label l-uname" })
                                            <div class="col-lg-12">
                                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control b-uname icon-user" })
                                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="pass">
                                        <div class="col">
                                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label l-pass" })
                                            <div class="col-md-10">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control b-pass icon-pass" })
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                    <div class="col log">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger " })
                        <div class="col">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label l-login" })
                            <div class="col-lg-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control b-login icon-user" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="col">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label l-login" })
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control b-login icon-pass" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="col l-btn">
                            <div class="col-md-12">
                                <input type="submit" value="Log in" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                }
                @*</div>*@
            </div>
        </div>

        <div class="container col-md-6 container-right">
            @*<div class="container-right-style">*@

            <img src="~/Image/gwendal-bar-1cmUs5eXOtg-unsplash.jpg" class="rightimg" />
            @*<h1>Image</h1>*@
            @*</div>*@
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}