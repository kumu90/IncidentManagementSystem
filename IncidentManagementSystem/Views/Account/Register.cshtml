@model IncidentManagementSystem.Models.RegisterViewModel
@*@{
        ViewBag.Title = "Register";
    }*@
<div class="container-fluid reg">

    <div class="col-lg-12 header ">
        <div class="header-text">
            Register Users
        </div>
        <div class="col text">
            <span class="page input-icon">Users</span>

            <span class="detail">Register Users</span>
        </div>
    </div>

    <div class="row justify-content-center  reg-form ">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {

            <div class="row ">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(" ", new { @class = "text-danger" })

                <div class="row ">
                   

                    <div class="row" style="margin-top:12px;">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 col-form-label l-user" })
                        <div class="col">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control u-box " })
                        </div>
                    </div>

                    <div class="row ">
                        @Html.LabelFor(m => m.InsId, new { @class = "col-md-2 col-form-label l-user" })
                        <div class="col">
                            @Html.TextBoxFor(m => m.InsId, new { @class = "form-control u-box " })
                            @*@Html.DropDownListFor(m => m.InsId, ViewBag.Instution as SelectList, "-Select Instution-", new { @class = "form-select b-ins" })*@
                            @Html.ValidationMessageFor(m => m.InsId, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="row ">
                        @Html.LabelFor(m => m.UserRole_Id, new { @class = "col-md-2 col-form-label l-user" })
                        <div class="col">
                            @Html.TextBoxFor(m => m.UserRole_Id, new { @class = "form-control u-box " })
                            @*@Html.DropDownListFor(m => m.UserRole_Id, ViewBag.UserRole as SelectList, "-Select Instution-", new { @class = "form-select b-role" })*@
                            @Html.ValidationMessageFor(m => m.UserRole_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="row ">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label l-user" })
                        <div class="col">
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control u-box " })
                        </div>
                    </div>

                    <div class="row ">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label l-user" })
                        <div class="col">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control u-box" })

                        </div>
                    </div>
                </div>
            </div>

            <div class="row " style="margin-bottom:12px;">
                <div class="col-lg-3 form-group">
                    <div class="offset-9 col-md-2">
                        <input type="submit" value="Regester" class="btn btn-success" />
                    </div>
                </div>


                <div class="col-lg-2 form-group">
                    <div class="offset-1 col-md-2">
                        <input type="submit" value="Cancel" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }
    </div>


</div>



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}