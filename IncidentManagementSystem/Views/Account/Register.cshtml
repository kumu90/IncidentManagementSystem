@model IncidentManagementSystem.Models.RegisterViewModel
@*@{
        ViewBag.Title = "Register";
    }*@

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>

    <div class="container reg">
        <div class="col-lg-12 header ">
            <div class="header-text">
                Register Users
            </div>
            <div class="col text">
                <span class="page input-icon">Users</span>

                <span class="detail">Register Users</span>
            </div>
        </div>

        <div class="container-fluid  reg-form ">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {   <div class="col">

                    <div class="row ">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="row ">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label name" })
                                <div class="col">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control u-box " })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row ">
                                @Html.LabelFor(m => m.InsId, new { @class = "col-md-2 col-form-label ins" })
                                <div class="col">
                                    @Html.TextBoxFor(m => m.InsId, new { @class = "form-control u-box " })
                                    @*@Html.DropDownListFor(m => m.InsId, ViewBag.Instution as SelectList, "-Select Instution-", new { @class = "form-select b-ins" })*@
                                    @Html.ValidationMessageFor(m => m.InsId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row ">
                                @Html.LabelFor(m => m.UserRole_Id, new { @class = "col-md-2 col-form-label role" })
                                <div class="col">
                                    @Html.TextBoxFor(m => m.UserRole_Id, new { @class = "form-control u-box " })
                                    @*@Html.DropDownListFor(m => m.UserRole_Id, ViewBag.UserRole as SelectList, "-Select Instution-", new { @class = "form-select b-role" })*@
                                    @Html.ValidationMessageFor(m => m.UserRole_Id, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="row ">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label rpass" })
                                <div class="col">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control b-pass icon-pass" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row ">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label rcpass" })
                                <div class="col">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control b-pass icon-pass" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row justify-content-center">
                            <div class="col-lg-2 form-group">
                                <div class="offset-md-5 col-md-10">
                                    <input type="submit" value="Cancel" class="btn btn-danger" />
                                </div>
                            </div>


                            <div class="col-lg-2 form-group">
                                <div class="offset-md-2 col-md-10">
                                    <input type="submit" value="Register" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}