
@{
    ViewBag.Title = "Index";
}



<div class="container-fluid dashboard">
    @*<div class="header ">*@
    @*<div class="header-text">
            Details
        </div>*@
    <div class="col-lg-12  text">
        <span class="page input-icon"> Details</span>

        <span class="detail">Institutions </span>
    </div>
    @*</div>*@
    @{
        var institutions = ViewBag.Institution as SelectList;
    }
    @using (Html.BeginForm("Search", "Institution", FormMethod.Get, new { id = "searchForm", enctype = "multipart/form-data" }))
    {

       
            if (institutions.Count() == 1)
            {
                foreach (var items in institutions)
                {
                    <input type="hidden" name="instId" id="InstId" value="@items.Value" />
                    <input type="text" value="@items.Text" class="form-control" readonly />
                    
                }
            }
            <div class="container-fluid search-box">
                <div class=" row s-box">


                    <div class="col-12 col-md-6 col-lg-3 form-group s-dash">
                        <label for="searchInput" id="text">Search</label>
                        <input id="searchInput" type="text" name="search" placeholder="Search..." class="form-control" } />

                    </div>

                    <!-- Offset dropdown -->
                    <div class="col-12 col-md-6 col-lg-3 form-group s-dash">
                        <label for="offsetSelect" id="text">Offset</label>
                        <select id="offsetSelect" name="offset" class="form-select">
                            <option value="@institutions.Count() == " results.InstList">All</option>
                            <option value="500">All</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="100">100</option>
                        </select>
                    </div>

                    <div class="col-12 col-md-6 col-lg-3 form-group b_dash">
                        <input type="submit" value="Search" class="btn btn-primary btn-width" />
                    </div>

                    <div class="col-12 col-md-6 col-lg-3 form-group b_dash">
                        <input type="button" value="Create" class="btn btn-success btn-width" onclick="location.href='@Url.Action("InstitutionRegister", "Institution")'" id="createUser" />
                    </div>

                </div>
            </div>
            <hr />
            <div id="partialInstitutionContainer">
                Html.PartialAsync("Search")

            </div>
        }
    </div>

@section scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {

            $.ajax({
                url: $('#searchForm').attr('action'),
                type: 'GET',
                success: function (result) {
                    $('#partialInstitutionContainer').html(result);
                },
                error: function (xhr, status, error) {
                    alert('Error: ' + error);
                }
            });


            $('#searchForm').submit(function (event) {
                event.preventDefault();
                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (result) {
                        $('#partialInstitutionContainer').html(result);
                    },
                    error: function (xhr, status, error) {
                        alert('Error: ' + error);
                    }
                });
            });

            //$('#createInst').onClick(function () {

            //});
        });
    </script>

    <script>
    function searchInstitution(page) {
        $.ajax({
            url: '@Url.Action("Search", "Institution")',
            type: 'GET',
            data: {
                search: $('#searchInput').val(),
                page: page,
                offset: $('#offsetSelect').val()
            },
            success: function (result) {
                $('#partialInstitutionContainer').html(result);
            },
            error: function (xhr, status, error) {
                console.error("An error occurred: " + status + " " + error);
            }
        });
    }
    </script>
}
