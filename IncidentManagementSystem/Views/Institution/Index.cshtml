
@{
    ViewBag.Title = "Index";
}



<div class="container-fluid dashboard">
    <div class="col-lg-12 header ">
        <div class="header-text">
        </div>
        <div class="col text">
            <span class="page input-icon">Ticket</span>

            <span class="detail">Institution Details </span>
        </div>
    </div>

    @using (Html.BeginForm("Search", "Institution", FormMethod.Get, new { id = "searchForm", enctype = "multipart/form-data" }))
    {
        <div class="container-fluid search-box">
            <div class=" row s-box">


                <div class="col-lg-4 form-group s-dash">
                    <input type="text" name="search" placeholder="Search..." class="form-control" } />
                </div>

                <div class="col-lg-4 s-dash">
                    <input type="submit" value="Search" class="btn btn-primary btn-width" />
                </div>

                <div class="col-lg-4 s-dash">
                    <input type="button" value="Create" class="btn btn-success btn-width" onclick="location.href='@Url.Action("InstitutionRegister", "Institution")'" id="createUser" />
                </div>

            </div>
        </div>
        <hr />
        <div id="partialInstitutionContainer">
            @{
                Html.Action("Search");
            }
        </div>
    }
</div>

@section scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#searchForm').submit(function (event) {
                event.preventDefault();
                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (result) {
                        $('#partialInstitutionContainer').html(result);
                    },
                    error: function (xhr, status, error) {
                        alert('Error: ' + error);
                    }
                });
            });

            //$('#createInst').onClick(function () {

            //});
        });
    </script>
}
