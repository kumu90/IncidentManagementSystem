@model IncidentManagementSystem.Model.TicketDto

@*@{
        ViewBag.Title = "Ticket";
    }*@
<div class="container-fluid">

    @using (Html.BeginForm("Ticket", "Instution", FormMethod.Post, new { role = "form" }))
    {
        <div class="col-lg-4 inst-row-form">
            @Html.LabelFor(m => m.InstitutionName, new { @class = "col-md-4 col-form-label l-inst" })
            <div class="col-lg-12">
                @Html.TextBoxFor(m => m.InstitutionName, new { @class = "form-control b-inst" })
            </div>
        </div>
        <div class="col-lg-4 inst-row-form">
            @Html.LabelFor(m => m.ServiceName, new { @class = "col-md-4 col-form-label l-inst" })
            <div class="col-lg-12">
                @Html.TextBoxFor(m => m.ServiceName, new { @class = "form-control b-inst" })
            </div>
        </div>
        <div class="col-lg-4 inst-row-form">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 col-form-label l-inst" })
            <div class="col-lg-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control b-inst" })
            </div>
        </div>

        <div class="col-lg-4 inst-row-form">
            @Html.LabelFor(m => m.ContectNo, new { @class = "col-md-4 col-form-label l-inst" })
            <div class="col-lg-12">
                @Html.TextBoxFor(m => m.ContectNo, new { @class = "form-control b-inst" })
            </div>
        </div>

        <div class="col-lg-4 inst-row-form">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-4 col-form-label l-inst" })
            <div class="col-lg-12">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control b-inst" })
            </div>
        </div>
    }
</div>

